name: 'Lint and build'

on:
  push:
    branches:
      - master
  pull_request:
    branches:
      - master
  workflow_dispatch:

jobs:
  build:
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os:
          - ubuntu-latest
          - macos-latest
          - windows-2019
        node_version: [16.x]
    name: Node ${{ matrix.node_version }} - ${{ matrix.os }}
    steps:
      - uses: actions/checkout@v3
      - name: Setup node
        uses: actions/setup-node@v3
        with:
          node-version: ${{ matrix.node_version }}
          architecture: ${{ matrix.architecture }}
          cache: 'node'

      - name: Installing dependencies
        run: npm install

      - name: Checking linter
        run: npm run lint

      - if: runner.os == 'Linux'
        name: Building app for Linux
        run: npm run electron:linux

      - if: runner.os == 'Windows'
        name: Building app for Windows
        run: npm run electron:windows

      - if: runner.os == 'macOs'
        name: Building app for macOS
        env:
          CSC_LINK: ${{ secrets.CSC_LINK }}
          CSC_KEY_PASSWORD: ${{ secrets.CSC_KEY_PASSWORD }}
        run: npm run electron:mac
