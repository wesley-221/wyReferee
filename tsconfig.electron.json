{
	"compilerOptions": {
		"outDir": "dist/electron",
		"rootDir": "main",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"target": "es5",
		"types": [
			"node"
		],
		"lib": [
			"es2017",
			"es2016",
			"es2015",
			"dom"
		]
	},
	"include": [
		"main/**/*.ts",
		"main/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"src/**"
	]
}
